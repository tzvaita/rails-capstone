  <div class="row">
    <div class="col-lg-3 bg-warning">
      <%= render 'shared/aside' %>
    </div>
    <div class="col-lg-6 bg-info">
      <h1 class="topics"> Thoughts </h1>
      <%= render 'shared/thought_form'%>

      <% @thoughts.each do |thot| %>
        <h1>
          <%= avatar_for thot.author %>
        </h1>
        <p><%= thot.author.username %> wrote: </p>
        <p class="text-white"><%= thot.text %></p>
      <% end %>
    </div>
    <div class="col-lg-3 show3">
    <h2 class="topics">Who to follow</h2>
    
      <% @users.each do |user| %>
          <% if user != current_user && !following?(user) %>
            <h3>
              <%= avatar_for user %>
              <%=link_to user.fullname, user %>
            </h3>
          <% end %>
      <% end %>
    </div>
  </div>
</div>