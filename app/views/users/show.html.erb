<div class="row">
  <div class="col-lg-3 bg-warning">
    <%= render 'shared/aside' %>
  </div>
  <div class="col-lg-6 bg-info">
    <h1>cover picture here</h1>
    <h2>User thoughts</h2>
    <% @thoughts.each do |thot| %>
      <p><%= thot.author.fullname %> wrote: </p>
      <p><%= thot.text %></p>
    <% end %>
  </div>
  <div class="col-lg-3 bg-danger">
    <h2>user photo here</h2>
    <div>
    <% if @user.photo? %>
      <%= image_tag @user.photo_url(:thumb).to_s %>
      <% else %>
    <%= image_tag("avatar.png", alt: "Rails logo", width: "50") %>
    <% end %>
    </div>
    <div>
      <%= link_to 'Edit profile',edit_user_path %>
    </div>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <div>
    <% if logged_in? %>
      <%= render 'followform' %>
      <% else %>
        <h2>Logged in as: <%= @user.name if current_user %> </h2>
      <% end %>
    </div>
    <h2>Followed by:</h2>
    <% if @followers.any? %>
      <% @followers.each do |follower| %>
        <p><%= follower.fullname %></p>
      <% end %>
      <% else %>
      <p>No followers yet!</p>
      <% end %>
  </div>
</div>

<%= link_to 'logout', logout_path, method: :delete %>