<div>
    <%= form_with(model: @user, :html => {:multipart => true}, local: true) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :fullname %>
      <%= f.text_field :fullname, class: 'form-control' %>

      <%= f.label :photo %>
      <%= f.file_field :photo %>

      <%= f.label :coverimage %>
      <%= f.file_field :coverimage %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
</div>